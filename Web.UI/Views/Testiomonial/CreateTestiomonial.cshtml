@model CreateTestiomonialDto
@{
    ViewData["Title"] = "CreateTestiomonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Yorumlar</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yorum Ekle</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="testiomonialTitle">Başlık</label>
								<input type="text" class="form-control" asp-for="TestiomonialName" id="testiomonialTitle">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="testiomonialDescription">Açıklamak</label>
								<input type="text" class="form-control" asp-for="TestiomonialDescription" id="testiomonialDescription">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="testiomonialIMG">Görsel</label>
								<input type="text" class="form-control" asp-for="TestiomonialImageUrl" id="testiomonialIMG">
							</div>
						</div>


						<div class="card-action">
							<button class="btn btn-success">Ekle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>


