@model List<ResultTestiomonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Yorumlar</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Yorum Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Yorumlar İle İlgili İşlemleri Aşağıdan Gerçekleştirebilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Ad</th>
                                    <th scope="col">Açıklaması</th>
                                    <th scope="col">Görsel</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.TestiomonialId</td>
                                        <td>@item.TestiomonialName</td>
                                        <td>@item.TestiomonialDescription</td>
                                        <td>@item.TestiomonialImageUrl</td>
                                        <td><a href="/Testiomonial/DeleteTestiomonial/@item.TestiomonialId" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Testiomonial/UpdateTestiomonial/@item.TestiomonialId" class="btn btn-outline-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Testiomonial/CreateTestiomonial" class="btn btn-outline-primary">Yorum Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>






