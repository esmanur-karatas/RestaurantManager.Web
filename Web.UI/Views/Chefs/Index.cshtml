@model List<ResultChefsDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Şef Bilgileri</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Şef Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Şefler İle İlgili İşlemleri Aşağıdan Gerçekleştirebilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Şef Adı</th>
                                    <th scope="col">Şef Açıklaması</th>
                                    <th scope="col">Şef Görsel</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.ChefsId</td>
                                        <td>@item.ChefsName</td>
                                        <td>@item.ChefsDescription</td>
                                        <td>@item.ChefsImageUrl</td>
                                        <td><a href="/Chefs/DeleteChefs/@item.ChefsId" class="btn btn-outline-danger">Sil</a></td>
                                        <td><a href="/Chefs/UpdateChefs/@item.ChefsId" class="btn btn-outline-success">Güncelle</a></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Chefs/CreateChefs" class="btn btn-outline-primary">Şef Ekle</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





