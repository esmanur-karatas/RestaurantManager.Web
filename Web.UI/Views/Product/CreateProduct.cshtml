@model CreateProductDto
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ürün İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Ürün Ekle</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="productName">Ürün Adı</label>
								<input type="text" class="form-control" asp-for="ProductName" id="productName">
							</div>
							</div>
						<div class="card-body">
							<div class="form-group">
								<label for="productDescription">Ürün Açıklaması</label>
								<input type="text" class="form-control" asp-for="ProductDescription" id="productDescription">
							</div>
						</div>
							<div class="card-body">
								<div class="form-group">
									<label for="productPrice">Ürün Fiyatı</label>
									<input type="text" class="form-control" asp-for="ProductPrice" id="productPrice">
								</div>
								</div>
						<div class="card-body">
							<div class="form-group">
								<label for="productImageUrl">Ürün Görsel Url</label>
								<input type="text" class="form-control" asp-for="ProductImageUrl" id="productImageUrl">
							</div>
						</div>
							<div class="card-body">
							<div class="form-group">
								<label for="categoryName">Kategori</label>
								@Html.DropDownListFor(x=>x.CategoryId,(List<SelectListItem>)ViewBag.v,new
								{@class = "form-control"})
							</div>
							</div>
							<div class="card-action">
								<button class="btn btn-success">Ekle</button>
							</div>
						</div>
				</form>
			</div>
		</div>
	</div>
</div>

