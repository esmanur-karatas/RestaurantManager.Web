@model UpdateFeatureDto
@{
    ViewData["Title"] = "UpdateFeature";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Öne Çıkanlar İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Öne Çıkanlar Ekle</div>
						</div>
						<input type="hidden" asp-for="FeatureId" />
						<div class="card-body">
							<div class="form-group">
								<label for="featureTitle">Öne Çıkanlar Başlık</label>
								<input type="text" class="form-control" asp-for="FeatureTitle" id="featureTitle">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="featureDescription">Öne Çıkanlar Açıklama</label>
								<input type="text" class="form-control" asp-for="FeatureDescription" id="featureDescription">
							</div>
						</div>

						<div class="card-body">
							<div class="form-group">
								<label for="featureImgUrl">Öne Çıkanlar Görsel</label>
								<input type="text" class="form-control" asp-for="FeatureImageUrl" id="featureImgUrl">
							</div>
						</div>

						<div class="card-action">
							<button class="btn btn-success">Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>